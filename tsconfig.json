{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    // Emit JSX using the React 17+ transform. This allows .tsx files to contain JSX.
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules"],
  "include": [
    "packages/sdk/src/**/*"
  ]
}